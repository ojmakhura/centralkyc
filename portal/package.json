{
  "name": "portal",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build-prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "generate": "ng generate",
    "test": "ng test",
    "prepare": "husky",
    "format": "prettier --write \"src/**/*.{ts,html,scss,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,css,json}\"",
    "docs": "hads -o -p 4040",
    "docs:build": "hads -o -p 4040"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.5.1",
  "dependencies": {
    "@angular/cdk": "~21.1.1",
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.1",
    "@angular/material": "~21.1.1",
    "@angular/platform-browser": "^21.1.0",
    "@angular/platform-server": "^21.1.1",
    "@angular/router": "^21.1.0",
    "@angular/ssr": "^21.1.1",
    "@ngrx/operators": "^21.0.1",
    "@ngrx/signals": "^21.0.1",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "express": "^5.2.1",
    "keycloak-angular": "^21.0.0",
    "keycloak-js": "^26.2.2",
    "ngx-mat-select-search": "^8.0.4",
    "ngx-spinner": "^21.0.0",
    "ngx-toastr": "^20.0.4",
    "rxjs": "~7.8.0",
    "sweetalert2": "^11.26.17",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.1",
    "@angular/cli": "^21.1.1",
    "@angular/compiler-cli": "^21.1.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.10",
    "hads": "^3.0.3",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
